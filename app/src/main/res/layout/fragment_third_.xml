<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Third_Fragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00271E"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/fragment_3" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text="Manage your apartments"
        android:textColor="@color/colorAccent"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:fontFamily="@font/lato_light"
        android:text="Create and manage apartments at the touch of a button"
        android:textColor="@color/white"
        android:textSize="18sp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slideThreeDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="220dp"
            android:layout_weight="0"
            android:clickable="true"
            android:drawableRight="@drawable/arrow_right"
            android:focusable="true"
            android:fontFamily="@font/lato_bold"
            android:gravity="bottom|end"
            android:text="Landlord"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/slideFourDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0"
            android:clickable="true"
            android:drawableRight="@drawable/arrow_right"
            android:focusable="true"
            android:fontFamily="@font/lato_bold"
            android:gravity="bottom|end"
            android:text="Tenant"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>